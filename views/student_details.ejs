<%- include('./partials/header') %>

    <div class="container mt-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Student Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Name:</strong>
                    <%= student.name %>
                </p>
                <p><strong>Roll No:</strong>
                    <%= student.rollNo %>
                </p>
                <p><strong>Fingerprint ID:</strong>
                    <%= student.fpid %>
                </p>
            </div>
        </div>

        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Attendance Summary</h5>
            </div>
            <div class="card-body">
                <p><strong>First Attendance Date:</strong>
                    <%= registrationDate.toLocaleDateString() %>
                </p>
                <p><strong>Total Attending Days (Monâ€“Fri):</strong>
                    <%= totalAttendingDays %> days
                </p>
                <p><strong>Days Present:</strong>
                    <%= attendedDays %> days
                </p>
                <p><strong>Attendance Percentage:</strong>
                    <span style="font-size: 1.5rem; font-weight: bold;"
                        class="<%= attendancePercentage >= 75 ? 'text-success' : 'text-danger' %>">
                        <%= attendancePercentage %>%
                    </span>
                </p>
            </div>
        </div>


        <h5 class="mb-0 pb-3">Attendance Records</h5>
        <div>
            <% if (records.length> 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Date</th>
                                <th scope="col">Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% records.forEach((record, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= record.date.toLocaleDateString() %>
                                    </td>
                                    <td>
                                        <%= record.date.toLocaleTimeString() %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <p class="text-muted">No attendance records found for this student.</p>
                    <% } %>
        </div>

    </div>

    <%- include('./partials/footer') %>